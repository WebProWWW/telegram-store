.star
  mpd(5px 0)
  color darken(colorLGray, 13%)
  font-size 14px
  cursor default
  user-select none

  &:hover

    .star-item
      color colorYellow

  &-item
    transAll(160)

    &.active
      color colorYellow

    &:hover
      transform scale(1.3)
      color colorYellow

      ~ .star-item
        color darken(colorLGray, 13%)

// - - - - - - - - - - - - - - - - - - - - - - - - - - - -

.bg
  &-gray
    background colorLGray

